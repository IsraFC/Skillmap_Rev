<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Skillmap"
             xmlns:repos="clr-namespace:Skillmap.Repositories"
             x:Class="Skillmap.App">

    <!-- Definición de los recursos globales de la aplicación -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Importación de colores personalizados -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />

                <!-- Importación de estilos personalizados (tipografía, botones, etc.) -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <repos:ImageRepository x:Key="Base64ToImageConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
