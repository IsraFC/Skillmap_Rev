<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.EditarMateriaFormulario"
             Title="Editar Materia"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Editar Materia"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="ID: MAT-205 | Última modificación: 10/05/2025"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Nombre" FontAttributes="Bold"/>
                <Entry Text="Bases de Datos"
                       BackgroundColor="White"
                       Placeholder="Nombre de la materia"/>

                <Label Text="Semestre" FontAttributes="Bold"/>
                <Picker Title="Seleccionar semestre"
                        SelectedIndex="1">
                    <Picker.Items>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="Docente" FontAttributes="Bold"/>
                <Picker Title="Seleccionar docente"
                        SelectedIndex="1">
                    <Picker.Items>
                        <x:String>Dra. Sánchez</x:String>
                        <x:String>Dr. Rodríguez</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>

            <!-- Botones de acción -->
            <HorizontalStackLayout Spacing="15" Margin="0,20,0,0">
                <Button Text="Volver"
                        BackgroundColor="Transparent"
                        BorderColor="#1a73e8"
                        TextColor="#1a73e8"
                        BorderWidth="1"/>

                <Button Text="Eliminar"
                        BackgroundColor="#d93025"
                        TextColor="White"/>

                <Button Text="Guardar"
                        BackgroundColor="#1a73e8"
                        TextColor="White"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
