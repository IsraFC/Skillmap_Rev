<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.EditarMateriaFormulario"
             Title="Editar Materia"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Editar Materia"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="ID: MAT-205 | √öltima modificaci√≥n: 10/05/2025"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- ID de Materia (solo lectura) -->
                    <VerticalStackLayout>
                        <Label Text="ID de Materia *" FontAttributes="Bold"/>
                        <Entry Text="MAT-205" IsReadOnly="True" BackgroundColor="#f0f0f0"/>
                    </VerticalStackLayout>

                    <!-- Nombre -->
                    <VerticalStackLayout>
                        <Label Text="Nombre *" FontAttributes="Bold"/>
                        <Entry Text="Bases de Datos"
                               Placeholder="Nombre de la materia"
                               BackgroundColor="White"/>
                    </VerticalStackLayout>

                    <!-- Semestre -->
                    <VerticalStackLayout>
                        <Label Text="Semestre *" FontAttributes="Bold"/>
                        <Picker Title="Seleccionar semestre" SelectedIndex="1">
                            <Picker.Items>
                                <x:String>3</x:String>
                                <x:String>4</x:String>
                                <x:String>5</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Docente -->
                    <VerticalStackLayout>
                        <Label Text="Docente Asignado *" FontAttributes="Bold"/>
                        <Picker Title="Seleccionar docente" SelectedIndex="1">
                            <Picker.Items>
                                <x:String>Dra. S√°nchez</x:String>
                                <x:String>Dr. Rodr√≠guez</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Estado -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="True"/>
                        <Label Text="Materia activa"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout Spacing="15" Margin="0,20,0,0">
                        <Button Text="‚¨Ö Volver al listado"
                                BackgroundColor="Transparent"
                                BorderColor="#1a73e8"
                                TextColor="#1a73e8"
                                BorderWidth="1"/>

                        <Button Text="üóë Eliminar"
                                BackgroundColor="#d93025"
                                TextColor="White"/>

                        <Button Text="üíæ Guardar cambios"
                                BackgroundColor="#1a73e8"
                                TextColor="White"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
