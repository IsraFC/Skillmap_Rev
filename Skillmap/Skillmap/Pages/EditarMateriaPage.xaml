<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.EditarMateriaPage"
             BackgroundColor="#f8f9fa"
             Title="Editar Materia">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Editar Materia"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="C√≥digo: MAT-101 | Creada: 15/05/2025"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- C√≥digo (solo lectura) -->
                    <VerticalStackLayout>
                        <Label Text="C√≥digo *" FontAttributes="Bold"/>
                        <Entry Text="MAT-101" IsReadOnly="True" BackgroundColor="#f0f0f0"/>
                    </VerticalStackLayout>

                    <!-- Nombre -->
                    <VerticalStackLayout>
                        <Label Text="Nombre *" FontAttributes="Bold"/>
                        <Entry Text="Programaci√≥n B√°sica" Placeholder="Nombre de la materia"/>
                    </VerticalStackLayout>

                    <!-- Semestre -->
                    <VerticalStackLayout>
                        <Label Text="Semestre *" FontAttributes="Bold"/>
                        <Picker Title="Selecciona el semestre" SelectedIndex="2">
                            <Picker.Items>
                                <x:String>1</x:String>
                                <x:String>2</x:String>
                                <x:String>3</x:String>
                                <x:String>4</x:String>
                                <x:String>5</x:String>
                                <x:String>6</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Docente -->
                    <VerticalStackLayout>
                        <Label Text="Docente *" FontAttributes="Bold"/>
                        <Picker Title="Selecciona docente" SelectedIndex="1">
                            <Picker.Items>
                                <x:String>Dr. Rodr√≠guez</x:String>
                                <x:String>Dra. S√°nchez</x:String>
                                <x:String>Mtro. L√≥pez</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Estado -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="True"/>
                        <Label Text="Materia activa" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10" Margin="0,20,0,0">
                        <Button Text="‚¨Ö Volver al listado"
                                BackgroundColor="Gray"
                                TextColor="White"
                                CornerRadius="10"
                                Grid.Column="0"/>

                        <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="10">
                            <Button Text="üóë Eliminar"
                                    BackgroundColor="#d93025"
                                    TextColor="White"
                                    CornerRadius="10"/>
                            <Button Text="üíæ Guardar Cambios"
                                    BackgroundColor="#1a73e8"
                                    TextColor="White"
                                    CornerRadius="10"/>
                        </HorizontalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
