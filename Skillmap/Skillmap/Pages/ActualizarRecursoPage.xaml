                    <!-- Archivo actual -->
                    <VerticalStackLayout>
                        <Label Text="Archivo Actual" FontAttributes="Bold"/>
                        <Frame BackgroundColor="#f8f9fa" CornerRadius="5" Padding="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="üìÑ" FontSize="18" VerticalOptions="Center"/>
                                <Label Text="video_html5.mp4" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
