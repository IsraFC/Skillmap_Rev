<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.CrearRecursoPage"
             BackgroundColor="#f8f9fa"
             Title="Nuevo Recurso Educativo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#0b8043" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Nuevo Recurso Educativo"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Complete los datos del recurso"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- ID recurso -->
                    <VerticalStackLayout>
                        <Label Text="ID del Recurso *" FontAttributes="Bold"/>
                        <Entry x:Name="IdRecursoEntry" Placeholder="Ej: 205" Keyboard="Numeric"/>
                    </VerticalStackLayout>

                    <!-- T√≠tulo -->
                    <VerticalStackLayout>
                        <Label Text="T√≠tulo del Recurso *" FontAttributes="Bold"/>
                        <Entry x:Name="TituloEntry" Placeholder="Ej: Gu√≠a de HTML5"/>
                    </VerticalStackLayout>

                    <!-- Descripci√≥n -->
                    <VerticalStackLayout>
                        <Label Text="Descripci√≥n *" FontAttributes="Bold"/>
                        <Editor x:Name="DescripcionEditor"
                                Placeholder="Describa el contenido del recurso..."
                                AutoSize="TextChanges"
                                HeightRequest="100"/>
                    </VerticalStackLayout>

                    <!-- Tipo y materia -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Tipo de Recurso *" FontAttributes="Bold"/>
                            <Picker x:Name="TipoRecursoPicker" Title="Seleccionar...">
                                <Picker.Items>
                                    <x:String>Documento PDF</x:String>
                                    <x:String>Video</x:String>
                                    <x:String>Presentaci√≥n</x:String>
                                    <x:String>Enlace Web</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>

                        <VerticalStackLayout>
                            <Label Text="Materia Asociada *" FontAttributes="Bold"/>
                            <Picker x:Name="MateriaPicker" Title="Seleccionar materia...">
                                <Picker.Items>
                                    <x:String>Programaci√≥n B√°sica</x:String>
                                    <x:String>Bases de Datos</x:String>
                                    <x:String>Dise√±o Web</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Subida o link del recurso -->
                    <VerticalStackLayout>
                        <Label Text="Ruta del Archivo o Enlace *" FontAttributes="Bold"/>
                        <Entry x:Name="RutaArchivoEntry" Placeholder="Ej: https://... o archivo.pdf"/>
                        <Label Text="Formatos soportados: PDF, MP4, PPTX, DOCX" FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>

                    <!-- Checkbox -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="EsPublicoCheckBox" IsChecked="True"/>
                        <Label Text="Hacer recurso p√∫blico" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="15" Margin="0,20,0,0">
                        <Button Text="‚ùå Cancelar"
                                BackgroundColor="LightGray"
                                TextColor="Black"
                                CornerRadius="10"/>
                        <Button Text="üíæ Guardar Recurso"
                                BackgroundColor="#0b8043"
                                TextColor="White"
                                CornerRadius="10"
                                Clicked="OnGuardarClicked"/>

                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
