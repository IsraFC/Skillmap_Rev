<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.UsuariosPage"
             BackgroundColor="#f8f9fa"
             Title="Gestión de Usuarios">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="10">
                <Label Text="Gestión de Usuarios"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <!-- Barra de acciones -->
            <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                <Button Text="➕ Nuevo Usuario"
                        BackgroundColor="#1a73e8"
                        TextColor="White"
                        CornerRadius="10"/>
                <Entry Placeholder="Buscar..."
                       WidthRequest="200"
                       BackgroundColor="White"
                       HeightRequest="40"/>
                <Button Text="🔍"
                        BackgroundColor="#d63384"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="40"/>
            </HorizontalStackLayout>

            <!-- Lista de usuarios (1 fila por tarjeta) -->
            <VerticalStackLayout Spacing="15">

                <!-- Usuario 1 -->
                <Frame BackgroundColor="White"
                       BorderColor="#1a73e8"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID: USR-101" FontAttributes="Bold" TextColor="#1a73e8"/>
                        <Label Text="Nombre: María Gómez López"/>
                        <Label Text="Rol: Docente"/>
                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                            <Button Text="✏️ Editar"
                                    BackgroundColor="#1a73e8"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="30"/>
                            <Button Text="🗑️ Eliminar"
                                    BackgroundColor="#d93025"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="30"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Usuario 2 -->
                <Frame BackgroundColor="White"
                       BorderColor="#1a73e8"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID: USR-102" FontAttributes="Bold" TextColor="#1a73e8"/>
                        <Label Text="Nombre: Carlos Martínez Ruiz"/>
                        <Label Text="Rol: Administrador"/>
                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                            <Button Text="✏️ Editar"
                                    BackgroundColor="#1a73e8"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="30"/>
                            <Button Text="🗑️ Eliminar"
                                    BackgroundColor="#d93025"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="30"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <!-- Paginación -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,10,0,0">
                <Button Text="Anterior" BackgroundColor="#d6d6d6" TextColor="Black" />
                <Button Text="1" BackgroundColor="#1a73e8" TextColor="White"/>
                <Button Text="2" BackgroundColor="#d63384" TextColor="White"/>
                <Button Text="Siguiente" BackgroundColor="#a30be8" TextColor="White"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
