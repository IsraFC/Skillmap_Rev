<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.CrearRolPage"
             BackgroundColor="#f8f9fa"
             Title="Crear Nuevo Rol">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="#28a745" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🛡 Crear Nuevo Rol"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Complete los campos requeridos (*)"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Plantillas -->
            <VerticalStackLayout>
                <Label Text="Plantillas rápidas:"/>
                <HorizontalStackLayout Spacing="10">
                    <Button Text="🎓 Docente" BackgroundColor="#6c757d" TextColor="White" CornerRadius="20"/>
                    <Button Text="📝 Editor" BackgroundColor="#6c757d" TextColor="White" CornerRadius="20"/>
                    <Button Text="👁 Visor" BackgroundColor="#6c757d" TextColor="White" CornerRadius="20"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Nombre e ID -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <VerticalStackLayout>
                    <Label Text="Nombre del Rol *"/>
                    <Entry x:Name="nombreRol" Placeholder="Ej: Auditor"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="ID Rol"/>
                    <Entry Text="Auto-generado" IsEnabled="False"/>
                    <Label Text="Se asignará al guardar" FontSize="12" TextColor="Gray"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Permisos -->
            <VerticalStackLayout>
                <Label Text="Permisos *"/>
                <Frame BorderColor="#dee2e6" BackgroundColor="#f2f2f2" CornerRadius="5" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <CheckBox x:Name="pUsuarios">
                        </CheckBox>
                        <CheckBox x:Name="pMaterias" IsChecked="True">
                        </CheckBox>
                        <CheckBox x:Name="pRecursos" IsChecked="True">
                        </CheckBox>
                        <CheckBox x:Name="pReportes">
                        </CheckBox>
                        <CheckBox x:Name="pConfiguracion">
                        </CheckBox>
                    </VerticalStackLayout>
                </Frame>
                <Label Text="Seleccione al menos un permiso" FontSize="12" TextColor="Gray"/>
            </VerticalStackLayout>

            <!-- Activar rol -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Activar rol inmediatamente" VerticalOptions="Center"/>
                <Switch IsToggled="True"/>
            </HorizontalStackLayout>

            <!-- Botones -->
            <HorizontalStackLayout HorizontalOptions="End" Spacing="10" Margin="0,20,0,0">
                <Button Text="❌ Cancelar"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="10"/>
                <Button Text="💾 Guardar Rol"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        CornerRadius="10"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
