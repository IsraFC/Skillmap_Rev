<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.LoginPage"
             Title="Iniciar Sesi贸n"
             BackgroundColor="#ECECEC"
             Shell.TabBarIsVisible="False">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--  Secci贸n superior con logo -->
        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Spacing="1">
            <Border StrokeShape="RoundRectangle 1100" BackgroundColor="White"
                    StrokeThickness="2" WidthRequest="120" HeightRequest="120"
                    Padding="10">
                <Image Source="logo.png"
                       WidthRequest="100"
                       HeightRequest="100"
                       Aspect="AspectFit"/>
            </Border>
            <Label Text="Bienvenido a Skillmap"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!--  Secci贸n inferior con formulario -->
        <VerticalStackLayout Grid.Row="1" Spacing="15" HorizontalOptions="Center"
                             Padding="20" BackgroundColor="White" 
                             Margin="0,20,0,0">

            <Label Text="Iniciar Sesi贸n"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" Margin="0,10,0,0"/>

            <Border StrokeShape="RoundRectangle 10" Stroke="Gray" StrokeThickness="1">
                <Entry x:Name="emailEntry" Placeholder="Correo Electr贸nico"
                       BackgroundColor="White" TextColor="Black"
                       WidthRequest="250" Keyboard="Email"
                       Margin="5"
                       Text="joaquin.hernandez@email.com"/>
            </Border>

            <Border StrokeShape="RoundRectangle 10" Stroke="Gray" StrokeThickness="1">
                <Entry x:Name="passwordEntry" Placeholder="Contrase帽a"
                       BackgroundColor="White" TextColor="Black"
                       WidthRequest="250" IsPassword="True"
                       Margin="5"
                       Text="JoaqH0112_Test"/>
            </Border>

            <Button Text="Ingresar"
                    BackgroundColor="#e91d1d"
                    TextColor="White"
                    Clicked="OnLoginClicked"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="250"/>

            <Button Text="Registrarse"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Clicked="OnRegisterClicked"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="250"/>

            <!--  Opci贸n de "驴Olvidaste tu contrase帽a?" con GestureRecognizer -->
            <Label Text="驴Olvidaste tu contrase帽a?"
                   FontSize="14"
                   TextColor="Blue"
                   HorizontalOptions="Center"
                   Padding="10">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
