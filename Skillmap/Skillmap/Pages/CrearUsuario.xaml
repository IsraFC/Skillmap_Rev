<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.UsuariosPage"
             BackgroundColor="#f8f9fa"
             Title="Gestión de Usuarios">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <Label Text="Gestión de Usuarios"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <!-- Barra de acciones -->
            <HorizontalStackLayout Spacing="15">
                <Button Text="➕ Nuevo Usuario"
                        BackgroundColor="#1a73e8"
                        TextColor="White"
                        CornerRadius="10" />
                <Entry Placeholder="Buscar..." WidthRequest="200" BackgroundColor="White"/>
                <Button Text="🔍"
                        BackgroundColor="#d63384"
                        TextColor="White"
                        CornerRadius="10"/>
            </HorizontalStackLayout>

            <!-- Tabla de usuarios -->
            <VerticalStackLayout Spacing="15">

                <!-- Usuario 1 -->
                <Frame BackgroundColor="White" BorderColor="#1a73e8" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID: USR-101" FontAttributes="Bold" TextColor="#1a73e8"/>
                        <Label Text="Nombre: María Gómez López"/>
                        <Label Text="Rol: Docente"/>
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="✏️ Editar" BackgroundColor="#1a73e8" TextColor="White" CornerRadius="8"/>
                            <Button Text="🗑 Eliminar" BackgroundColor="#d93025" TextColor="White" CornerRadius="8"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Usuario 2 -->
                <Frame BackgroundColor="White" BorderColor="#1a73e8" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID: USR-102" FontAttributes="Bold" TextColor="#1a73e8"/>
                        <Label Text="Nombre: Carlos Martínez Ruiz"/>
                        <Label Text="Rol: Administrador"/>
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="✏️ Editar" BackgroundColor="#1a73e8" TextColor="White" CornerRadius="8"/>
                            <Button Text="🗑 Eliminar" BackgroundColor="#d93025" TextColor="White" CornerRadius="8"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <!-- Paginación -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,10,0,0">
                <Button Text="Anterior" IsEnabled="False"/>
                <Button Text="1" BackgroundColor="#1a73e8" TextColor="White"/>
                <Button Text="2"/>
                <Button Text="Siguiente"/>
            </HorizontalStackLayout>

            <!-- Sección para crear usuario -->
            <Frame BackgroundColor="White"
                   BorderColor="#198754"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Label Text="👤 Crear Nuevo Usuario"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#198754" />

                    <!-- Nombre y Apellido -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Nombre"/>
                            <Entry Placeholder="Ej: Juan" />
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Apellido Paterno"/>
                            <Entry Placeholder="Ej: Pérez" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Correo -->
                    <VerticalStackLayout>
                        <Label Text="Correo Electrónico"/>
                        <Entry Placeholder="Ej: usuario@dominio.com" Keyboard="Email" />
                    </VerticalStackLayout>

                    <!-- Rol -->
                    <VerticalStackLayout>
                        <Label Text="Rol"/>
                        <Picker Title="Seleccionar...">
                            <Picker.Items>
                                <x:String>Estudiante</x:String>
                                <x:String>Docente</x:String>
                                <x:String>Administrador</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Checkbox -->
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="True" />
                        <Label Text="Usuario activo" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                        <Button Text="Cancelar"
                                BackgroundColor="Gray"
                                TextColor="White"
                                CornerRadius="10"/>
                        <Button Text="Crear Usuario"
                                BackgroundColor="#198754"
                                TextColor="White"
                                CornerRadius="10"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
