<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.CrearUsuarioPage"
             BackgroundColor="#f8f9fa"
             Title="Registrar Usuario">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Registrar Nuevo Usuario"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Complete el formulario con los datos del usuario"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- Nombre y apellidos -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Nombre(s) *" FontAttributes="Bold"/>
                            <Entry Placeholder="Ej: Juan"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Apellido Paterno *" FontAttributes="Bold"/>
                            <Entry Placeholder="Ej: PÃ©rez"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Apellido Materno" FontAttributes="Bold"/>
                            <Entry Placeholder="Ej: LÃ³pez"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Correo y Rol -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Correo ElectrÃ³nico *" FontAttributes="Bold"/>
                            <Entry Placeholder="usuario@dominio.com" Keyboard="Email"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Rol *" FontAttributes="Bold"/>
                            <Picker Title="Seleccionar rol...">
                                <Picker.Items>
                                    <x:String>Administrador</x:String>
                                    <x:String>Docente</x:String>
                                    <x:String>Estudiante</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- ContraseÃ±a y confirmaciÃ³n -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="ContraseÃ±a *" FontAttributes="Bold"/>
                            <Entry Placeholder="********" IsPassword="True" x:Name="PasswordEntry"/>
                            <!-- SimulaciÃ³n barra de fuerza -->
                            <BoxView HeightRequest="5"
                                     CornerRadius="3"
                                     x:Name="PasswordStrengthBar"
                                     BackgroundColor="#e9ecef"
                                     HorizontalOptions="Start"
                                     WidthRequest="0"/>
                            <Label Text="MÃ­nimo 8 caracteres" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout>
                            <Label Text="Confirmar ContraseÃ±a *" FontAttributes="Bold"/>
                            <Entry Placeholder="********" IsPassword="True"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Checkbox -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="True"/>
                        <Label Text="Enviar credenciales por correo"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="15" Margin="0,20,0,0">
                        <Button Text="âŒ Cancelar"
                                BackgroundColor="LightGray"
                                TextColor="Black"
                                CornerRadius="10"/>
                        <Button Text="ðŸ’¾ Registrar Usuario"
                                BackgroundColor="#0b8043"
                                TextColor="White"
                                CornerRadius="10"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
