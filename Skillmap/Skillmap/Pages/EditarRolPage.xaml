<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.EditarRolPage"
             BackgroundColor="#f8f9fa"
             Title="Editar Rol">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Editar Rol: Docente"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="ID: ROL-DOC | Creado: 15/01/2025"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- Nombre e ID -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Nombre del Rol *" FontAttributes="Bold"/>
                            <Entry Text="Docente"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="ID Rol" FontAttributes="Bold"/>
                            <Entry Text="ROL-DOC" IsReadOnly="True" BackgroundColor="#f0f0f0"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Permisos -->
                    <VerticalStackLayout>
                        <Label Text="Permisos *" FontAttributes="Bold"/>
                        <Frame BorderColor="#dee2e6" CornerRadius="5" Padding="15" BackgroundColor="#f2f2f2">
                            <VerticalStackLayout Spacing="12">
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="True" IsEnabled="False"/>
                                    <Label Text="Ver materias asignadas" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="True"/>
                                    <Label Text="Gestionar recursos" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <CheckBox/>
                                    <Label Text="Calificar estudiantes" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="True"/>
                                    <Label Text="Subir material" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <CheckBox/>
                                    <Label Text="Generar reportes" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Alerta -->
                    <Frame BackgroundColor="#fff3cd" BorderColor="#ffeeba" CornerRadius="5" Padding="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ‘¥" FontSize="20"/>
                            <Label Text="12 usuarios tienen este rol asignado." VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Estado -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Rol activo" VerticalOptions="Center"/>
                        <Switch IsToggled="True"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" Margin="0,20,0,0">
                        <Button Text="â¬… Volver al listado"
                                BackgroundColor="Gray"
                                TextColor="White"
                                CornerRadius="10"
                                Grid.Column="0"/>
                        <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="10">
                            <Button Text="ðŸ—‘ Desactivar"
                                    BackgroundColor="#d93025"
                                    TextColor="White"
                                    CornerRadius="10"/>
                            <Button Text="ðŸ’¾ Guardar Cambios"
                                    BackgroundColor="#1a73e8"
                                    TextColor="White"
                                    CornerRadius="10"/>
                        </HorizontalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
