                    <Label Text="âž• Crear Nuevo Rol" FontSize="20" FontAttributes="Bold" TextColor="#1a73e8"/>

                    <!-- Nombre e ID -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Nombre del Rol *"/>
                            <Entry Placeholder="Ej: Coordinador"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
