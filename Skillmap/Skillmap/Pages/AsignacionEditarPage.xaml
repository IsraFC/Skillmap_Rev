<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.AsignacionEditarPage"
             Title="Editar Asignación"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="✏️ Editar Asignación"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="ID: ASG-101 | Creada: 15/05/2025"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Materia actual -->
            <VerticalStackLayout Spacing="5">
                <Label Text="📘 Materia Actual" FontAttributes="Bold"/>
                <Frame BorderColor="#6f42c1" BackgroundColor="#f0f0ff" CornerRadius="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="MAT-101 - Programación Básica" TextColor="#6f42c1"/>
                        <Label Text="3er Semestre | Dr. Rodríguez" FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Recurso actual -->
            <VerticalStackLayout Spacing="5">
                <Label Text="📎 Recurso Actual" FontAttributes="Bold"/>
                <Frame BorderColor="#20c997" BackgroundColor="#e6fff9" CornerRadius="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="REC-205 - Guía Completa de HTML5" TextColor="#20c997"/>
                        <Label Text="PDF | Subido el 10/05/2025" FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Cambio de recurso -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Cambiar Asignación" FontAttributes="Bold"/>
                <Picker Title="Mantener asignación actual">
                    <Picker.Items>
                        <x:String>Seleccionar nuevo recurso...</x:String>
                        <x:String>REC-301 - Fundamentos CSS</x:String>
                        <x:String>REC-402 - SQL Avanzado</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="⬅️ Volver"
                        BackgroundColor="#e0e0e0"
                        TextColor="Black"
                        HorizontalOptions="StartAndExpand"
                        CornerRadius="10"/>

                <Button Text="🗑️ Eliminar Asignación"
                        BackgroundColor="#d93025"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="End"/>

                <Button Text="💾 Guardar Cambios"
                        BackgroundColor="#1a73e8"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="End"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
