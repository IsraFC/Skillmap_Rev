<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.CrearMateriaPage"
             BackgroundColor="#f8f9fa"
             Title="Registrar Nueva Materia">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="#0b8043" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Registrar Nueva Materia"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Complete todos los campos obligatorios"
                           FontSize="14"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- C√≥digo y Semestre -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="C√≥digo de Materia *" FontAttributes="Bold"/>
                            <Entry Placeholder="Ej: MAT-202"/>
                            <Label Text="Usar formato: MAT-XXX" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout>
                            <Label Text="Semestre *" FontAttributes="Bold"/>
                            <Picker Title="Seleccionar semestre">
                                <Picker.Items>
                                    <x:String>1</x:String>
                                    <x:String>2</x:String>
                                    <x:String>3</x:String>
                                    <x:String>4</x:String>
                                    <x:String>5</x:String>
                                    <x:String>6</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Nombre -->
                    <VerticalStackLayout>
                        <Label Text="Nombre de la Materia *" FontAttributes="Bold"/>
                        <Entry Placeholder="Ej: Programaci√≥n Avanzada"/>
                    </VerticalStackLayout>

                    <!-- Docente -->
                    <VerticalStackLayout>
                        <Label Text="Docente Asignado *" FontAttributes="Bold"/>
                        <Picker Title="Seleccionar docente...">
                            <Picker.Items>
                                <x:String>Dra. Mar√≠a S√°nchez</x:String>
                                <x:String>Dr. Carlos Rodr√≠guez</x:String>
                                <x:String>Mtro. Luis Gonz√°lez</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Habilitar -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="True"/>
                        <Label Text="Habilitar materia para inscripciones"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="15" Margin="0,20,0,0">
                        <Button Text="‚ùå Cancelar"
                                BackgroundColor="LightGray"
                                TextColor="Black"
                                CornerRadius="10"/>
                        <Button Text="üíæ Registrar Materia"
                                BackgroundColor="#0b8043"
                                TextColor="White"
                                CornerRadius="10"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
