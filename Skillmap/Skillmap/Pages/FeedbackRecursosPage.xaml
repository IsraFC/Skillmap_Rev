<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Pages.FeedbackRecursosPage"
             Title="Feedback de Recursos"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="#1a73e8" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="💬 Feedback de Usuarios"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tabla simulada -->
            <Grid ColumnDefinitions="*,*,Auto,*,*,Auto"
                  RowSpacing="10"
                  ColumnSpacing="10">

                <!-- Encabezados -->
                <Label Text="Recurso" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                <Label Text="Usuario" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Calificación" FontAttributes="Bold" Grid.Row="0" Grid.Column="2"/>
                <Label Text="Comentario" FontAttributes="Bold" Grid.Row="0" Grid.Column="3"/>
                <Label Text="Fecha" FontAttributes="Bold" Grid.Row="0" Grid.Column="4"/>
                <Label Text="Acciones" FontAttributes="Bold" Grid.Row="0" Grid.Column="5"/>

                <!-- Fila de ejemplo -->
                <Label Text="Guía HTML5" Grid.Row="1" Grid.Column="0"/>
                <Label Text="maria@mail.com" Grid.Row="1" Grid.Column="1"/>
                <Label Text="⭐ 5" TextColor="Green" FontAttributes="Bold" Grid.Row="1" Grid.Column="2"/>
                <Label Text="Muy útil para principiantes" Grid.Row="1" Grid.Column="3"/>
                <Label Text="15/05/2025" Grid.Row="1" Grid.Column="4"/>
                <Button Text="🗑️"
                        BackgroundColor="#d93025"
                        TextColor="White"
                        CornerRadius="6"
                        WidthRequest="35"
                        HeightRequest="30"
                        Grid.Row="1"
                        Grid.Column="5"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
