<?xml version="1.0" encoding="utf-8" ?>
<!-- Página de contenido para la sección de Perfil -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             x:Class="Skillmap.Views.ProfilePage"
             Title="Perfil"
             BackgroundColor="#ECECEC">

    <ContentPage.BindingContext>
        <viewmodels:ProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

            <!-- Imagen de perfil (completamente circular) -->
            <Frame Padding="0" CornerRadius="50" WidthRequest="120" HeightRequest="120"
                   IsClippedToBounds="True" BorderColor="Black">
                <Image Source="profile.png"
                       WidthRequest="120"
                       HeightRequest="120"
                       Aspect="AspectFill"/>
            </Frame>

            <!-- Nombre del usuario -->
            <Label Text="{Binding NombreCompleto}"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"/>

            <!-- Correo del usuario -->
            <Label Text="{Binding UserName}"
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>

            <!-- Opciones de configuración -->
            <VerticalStackLayout Spacing="10" WidthRequest="300">
                <Button Text="Crear Usuario"
                        BackgroundColor="#0b8043"
                        TextColor="White"
                        CornerRadius="20"
                        HeightRequest="45"
                        WidthRequest="250"
                        IsVisible="{Binding EsAdmin}"
                        Command="{Binding CrearUsuarioCommand}" />

                <Button Text="Editar Perfil"
                        BackgroundColor="#e91d1d"
                        TextColor="White"
                        Command="{Binding EditarPerfilCommand}"
                        CornerRadius="20"
                        HeightRequest="45"
                        WidthRequest="250"/>

                <!--<Button Text="Configuración"
                            BackgroundColor="#004bdf"
                            TextColor="White"
                            Command="{Binding ConfiguracionCommand}"
                            CornerRadius="20"
                            HeightRequest="45"
                            WidthRequest="250"/>-->

                <Button Text="Cerrar Sesión"
                            BackgroundColor="Gray"
                            TextColor="White"
                            Command="{Binding CerrarSesionCommand}"
                            CornerRadius="20"
                            HeightRequest="45"
                            WidthRequest="250"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
