<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             x:Class="Skillmap.Views.SemesterSubjectsPage"
             x:Name="SemesterSubjectsPageRef"
             Title="Materias del Semestre"
             BackgroundColor="White"
             Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:SemesterSubjectsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="{Binding NombreSemestre}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Materias}"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White"
                                StrokeShape="RoundRectangle 10"
                                Padding="10"
                                Margin="5">
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>