<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.EditarRecursoPage"
             Title="Modificar Recurso Educativo"
             BackgroundColor="#f8f9fa"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Encabezado -->
            <Label Text="ðŸ› ï¸ Modificar Recurso Educativo"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#0b8043"
                   HorizontalOptions="Center"/>

            <!-- SubtÃ­tulo -->
            <Label Text="Selecciona un recurso existente y actualiza sus datos"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Contenedor de formulario -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="20">

                    <!-- Selector de recurso -->
                    <Label Text="Seleccionar recurso *"
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Picker x:Name="RecursoPicker"
                            Title="Selecciona un recurso"
                            SelectedIndexChanged="OnRecursoSeleccionado"
                            BackgroundColor="#eeeeee"
                            TextColor="Black"/>

                    <!-- TÃ­tulo -->
                    <Entry x:Name="TituloEntry"
                           Placeholder="TÃ­tulo del recurso *"
                           FontSize="16"
                           BackgroundColor="#eeeeee"
                           TextColor="Black"/>

                    <!-- DescripciÃ³n -->
                    <Editor x:Name="DescripcionEditor"
                            Placeholder="DescripciÃ³n del recurso *"
                            FontSize="16"
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            BackgroundColor="#eeeeee"
                            TextColor="Black"/>

                    <!-- Link -->
                    <Entry x:Name="RutaArchivoEntry"
                           Placeholder="Enlace o ruta del recurso *"
                           FontSize="16"
                           BackgroundColor="#eeeeee"
                           TextColor="Black"/>

                    <!-- Pickers -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Tipo de Recurso *" FontSize="14" FontAttributes="Bold"/>
                            <Picker x:Name="TipoRecursoPicker"
                                    Title="Seleccionar tipo..."
                                    BackgroundColor="#eeeeee"
                                    TextColor="Black"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Materia Asociada *" FontSize="14" FontAttributes="Bold"/>
                            <Picker x:Name="MateriaPicker"
                                    Title="Seleccionar materia..."
                                    BackgroundColor="#eeeeee"
                                    TextColor="Black"
                                    ItemDisplayBinding="{Binding Name}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- PÃºblico -->
                    <HorizontalStackLayout>
                        <CheckBox x:Name="EsPublicoCheckBox" IsChecked="True"/>
                        <Label Text="Hacer recurso pÃºblico" TextColor="Black" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout Spacing="15" Margin="0,10,0,0" HorizontalOptions="End">
                        <Button Text="âœ… Actualizar"
                                BackgroundColor="#0b8043"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Clicked="OnActualizarRecursoClicked"
                                HeightRequest="45"/>

                        <Button Text="ðŸ—‘ï¸ Eliminar"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Clicked="OnEliminarRecursoClicked"
                                HeightRequest="45"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>