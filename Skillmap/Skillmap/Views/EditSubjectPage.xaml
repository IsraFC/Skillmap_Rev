<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             x:Class="Skillmap.Views.EditSubjectPage"
             Title="Modificar o Eliminar Materia"
             BackgroundColor="#f8f9fa"
             Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:EditSubjectViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Modificar o Eliminar Materia"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1a73e8"
                   HorizontalOptions="Center"/>

            <!-- Picker para seleccionar materia existente -->
            <Picker Title="Seleccionar materia"
                    ItemsSource="{Binding Materias}"
                    SelectedItem="{Binding MateriaSeleccionada}"
                    ItemDisplayBinding="{Binding Name}"
                    FontSize="16"
                    BackgroundColor="#cdcdcd"
                    TextColor="Black"/>

            <!-- Campos para editar -->
            <Entry Placeholder="Nombre de la materia"
                   Text="{Binding Nombre}"
                   FontSize="16"
                   TextColor="Black"
                   IsEnabled="{Binding PuedeEditar}"/>

            <Picker Title="Seleccionar semestre"
                    ItemsSource="{Binding Semestres}"
                    SelectedItem="{Binding SemestreSeleccionado}"
                    FontSize="16"
                    BackgroundColor="#cdcdcd"
                    TextColor="Black"
                    IsEnabled="{Binding PuedeEditar}"/>

            <Picker Title="Seleccionar docente"
                    ItemsSource="{Binding Docentes}"
                    SelectedItem="{Binding DocenteSeleccionado}"
                    ItemDisplayBinding="{Binding NombreCompleto}"
                    FontSize="16"
                    BackgroundColor="#cdcdcd"
                    TextColor="Black"
                    IsEnabled="{Binding PuedeEditar}"/>

            <HorizontalStackLayout>
                <CheckBox IsChecked="{Binding Habilitado}" IsEnabled="{Binding PuedeEditar}" />
                <Label Text="Materia habilitada para uso" TextColor="Black" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Botones -->
            <Button Text="Actualizar Materia"
                    Command="{Binding ActualizarCommand}"
                    BackgroundColor="#0b8043"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    IsEnabled="{Binding PuedeEditar}"/>

            <Button Text="Eliminar Materia"
                    Command="{Binding EliminarCommand}"
                    BackgroundColor="#e53935"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    IsEnabled="{Binding PuedeEditar}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>