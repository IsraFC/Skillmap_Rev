<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.EditResourcePage"
             Title="Modificar Recurso Educativo"
             BackgroundColor="#f8f9fa"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Encabezado -->
            <Label Text="🛠️ Modificar Recurso Educativo"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#0b8043"
                   HorizontalOptions="Center"/>

            <!-- Subtítulo -->
            <Label Text="Selecciona un recurso existente y actualiza sus datos"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Contenedor de formulario -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="20">

                    <!-- Selector de recurso -->
                    <Label Text="Seleccionar recurso *"
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding Recursos}"
                            SelectedItem="{Binding RecursoSeleccionado}"
                            ItemDisplayBinding="{Binding Title}"
                            Title="Selecciona un recurso"
                            BackgroundColor="#eeeeee"
                            TextColor="Black"/>

                    <!-- Título -->
                    <Entry Text="{Binding Titulo}"
                           Placeholder="Título del recurso *"
                           FontSize="16"
                           BackgroundColor="#eeeeee"
                           TextColor="Black"/>

                    <!-- Descripción -->
                    <Editor Text="{Binding Descripcion}"
                            Placeholder="Descripción del recurso *"
                            FontSize="16"
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            BackgroundColor="#eeeeee"
                            TextColor="Black"/>

                    <!-- Link -->
                    <Entry Text="{Binding Link}"
                           Placeholder="Enlace o ruta del recurso *"
                           FontSize="16"
                           BackgroundColor="#eeeeee"
                           TextColor="Black"/>

                    <!-- Pickers -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Tipo de Recurso *" FontSize="14" FontAttributes="Bold"/>
                            <Picker ItemsSource="{Binding Tipos}"
                                    SelectedItem="{Binding TipoSeleccionado}"
                                    ItemDisplayBinding="{Binding Id_Resource_Type}"
                                    Title="Seleccionar tipo..."
                                    BackgroundColor="#eeeeee"
                                    TextColor="Black"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Materia Asociada *" FontSize="14" FontAttributes="Bold"/>
                            <Picker ItemsSource="{Binding Materias}"
                                    SelectedItem="{Binding MateriaSeleccionada}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Title="Seleccionar materia..."
                                    BackgroundColor="#eeeeee"
                                    TextColor="Black"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Público -->
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding EsPublico}"/>
                        <Label Text="Hacer recurso público" TextColor="Black" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout Spacing="15" Margin="0,10,0,0" HorizontalOptions="End">
                        <Button Text="✅ Actualizar"
                                Command="{Binding ActualizarCommand}"
                                BackgroundColor="#0b8043"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"/>

                        <Button Text="🗑️ Eliminar"
                                Command="{Binding EliminarCommand}"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>