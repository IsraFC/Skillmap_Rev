<?xml version="1.0" encoding="utf-8" ?>
<!-- P치gina de contenido para la secci칩n de Recursos -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.ResourcesPage"
             Title="Resources Page"
             BackgroundColor="#ECECEC">

    <!-- ScrollView permite desplazamiento si el contenido excede el tama침o de la pantalla -->
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10"> <!-- Contenedor principal en formato de pila vertical -->

            <!-- T칤tulo de la p치gina -->
            <Label Text="游늭 Listado De Recursos"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   TextColor="Black"
                   />

            <SearchBar x:Name="searchBar"
                       Placeholder="Buscar recursos..."
                       BackgroundColor="#EFEFEF"
                       TextColor="Black"
                       Margin="0,10,0,10"
                       TextChanged="OnSearchTextChanged"/>

            <!-- Lista de recursos -->
            <CollectionView x:Name="resourcesCollectionView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            Padding="10"
                            Margin="5">

                            <Grid ColumnDefinitions="Auto, *">

                                <!-- Informaci칩n del recurso -->
                                <StackLayout Grid.Column="1" Padding="10" Spacing="5">
                                    <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>

                                    <Label Text= "{Binding UploadDate}"
                                       FontSize="14"
                                       TextColor="Gray"/>

                                    <Button Text="Ver m치s"
                                        BackgroundColor="Black"
                                        TextColor="White"
                                        HeightRequest="40"
                                        FontSize="14"
                                        CornerRadius="15"
                                        Pressed="OnViewMorePressed"/>
                                </StackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bot칩n para agregar un nuevo recurso -->
            <Button Text="Agregar Recurso"
                    BackgroundColor="#b39ddb"
                    TextColor="Black"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="15"
                    Clicked="OnAddResourceButtonClicked"/>

            <!-- Bot칩n para editar / eliminar favoritos -->
            <Button Text="Modificar / Eliminar Favoritos"
                    BackgroundColor="#9575cd"
                    TextColor="White"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="15"
                    Clicked="OnEditFavoritesButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>