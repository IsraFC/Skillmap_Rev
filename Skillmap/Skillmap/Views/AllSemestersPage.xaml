<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.AllSemestersPage"
             Title="Todos los Semestres"
             BackgroundColor="White"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Listado de Semestres"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Semestres}" x:Name="semestersCollectionView" SelectionMode="Single"
                            SelectionChanged="OnSemesterSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Padding="10" Margin="5">
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="{Binding SubjectCountText}" FontSize="14" TextColor="Gray"/>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Añadir materia" 
                    Clicked="OnAgregarMateriaClicked"
                    BackgroundColor="#b39ddb"
                    TextColor="Black"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="15"
                    IsVisible="{Binding IsNotStudent}"/>
            
            <Button Text="Modificar / Eliminar materia"
                    Clicked="OnEditarMateriaClicked"
                    BackgroundColor="#9575cd"
                    TextColor="White"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="15"
                    IsVisible="{Binding IsNotStudent}"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
