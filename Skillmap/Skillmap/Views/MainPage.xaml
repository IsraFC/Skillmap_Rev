<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             x:Class="Skillmap.Views.MainPage"
             x:Name="MainPageRef"
             BackgroundColor="#ECECEC">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">

            <!-- Encabezado -->
            <Label Text="Bienvenido" FontSize="24" FontAttributes="Bold" TextColor="Red"/>
            <Label Text="¿Qué recursos deseas visualizar?" FontSize="14" TextColor="Gray"/>

            <!-- Recomendaciones -->
            <Label Text="Recomendaciones" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
            <CollectionView ItemsSource="{Binding Recomendaciones}"
                            ItemsLayout="HorizontalList"
                            HeightRequest="120"
                            Margin="0,0,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" Margin="5" Padding="5" WidthRequest="180" CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" LineBreakMode="TailTruncation" TextColor="Black"/>
                                <Label Text="{Binding Description}" FontSize="12" LineBreakMode="TailTruncation" TextColor="Black"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Sección de Semestres -->
            <Border BackgroundColor="Red" StrokeShape="RoundRectangle 20" Padding="15" Margin="10,20,10,0">
                <StackLayout Spacing="10">

                    <Label Text="Todos Mis Semestres" FontSize="18" FontAttributes="Bold" TextColor="White"/>

                    <CollectionView ItemsSource="{Binding SemestresVisibles}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Padding="10" Margin="5">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                                            <Label Text="{Binding SubjectCountText}" FontSize="14" TextColor="Gray"/>
                                        </StackLayout>
                                        
                                        <!-- Agregar Gesto Tactil-->
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.SemestreTappedCommand, Source={x:Reference MainPageRef}}"
                                                                  CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="Mostrar todas"
                            Command="{Binding MostrarTodosCommand}"
                            BackgroundColor="White"
                            TextColor="Red"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="40"/>

                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>
