<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.EditProfilePage"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             Title="Editar Perfil"
             BackgroundColor="#ECECEC"
             Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:EditProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding=" 20" Spacing="15" HorizontalOptions="Center">

            <!-- 🧑‍💼 Solo admin: seleccionar usuario -->
            <StackLayout IsVisible="{Binding EsAdmin}">
                <Label Text="Seleccionar Usuario"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center" />
                <Picker ItemsSource="{Binding UsuariosDisponibles}"
                        SelectedItem="{Binding UsuarioSeleccionado}"
                        ItemDisplayBinding="{Binding UserName}"
                        Title="Selecciona un usuario"
                        WidthRequest="250"
                        BackgroundColor="White"
                        TextColor="Black" />
            </StackLayout>

            <Frame CornerRadius="100" WidthRequest="120" HeightRequest="120" 
               BorderColor="Gray" Padding="0">
                <Image Source="profile.png" Aspect="AspectFill" WidthRequest="120" HeightRequest="120"/>
            </Frame>

            <Entry Placeholder="Nombre"
                       Text="{Binding Name}"
                       BackgroundColor="White"
                       TextColor="Black"
                       WidthRequest="250"/>

            <!-- Apellido paterno -->
            <Entry Placeholder="Apellido Paterno"
                       Text="{Binding Father_LastName}"
                       BackgroundColor="White"
                       TextColor="Black"
                       WidthRequest="250"/>

            <!-- Apellido materno -->
            <Entry Placeholder="Apellido Materno"
                       Text="{Binding Mother_LastName}"
                       BackgroundColor="White"
                       TextColor="Black"
                       WidthRequest="250"/>

            <Entry Placeholder="Correo (UserName)"
                   Text="{Binding UserName}"
                   IsReadOnly="True"
                   BackgroundColor="#e0e0e0"
                   TextColor="Gray"
                   WidthRequest="250"/>

            <!-- Picker de Rol visible solo para Admin -->
            <StackLayout IsVisible="{Binding EsAdmin}">
                <Label Text="Rol" FontAttributes="Bold" TextColor="Black"/>
                <Picker ItemsSource="{Binding RolesDisponibles}"
                        SelectedItem="{Binding Rol}"
                        BackgroundColor="White"
                        TextColor="Black"
                        WidthRequest="250"/>
            </StackLayout>

            <!-- Botón Guardar -->
            <Button Text="Guardar Cambios"
                    Command="{Binding GuardarCambiosCommand}"
                    BackgroundColor="#e91d1d"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="250"/>

            <Button Text="Eliminar Usuario"
                    IsVisible="{Binding EsAdmin}"
                    Command="{Binding EliminarUsuarioCommand}"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="250"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>