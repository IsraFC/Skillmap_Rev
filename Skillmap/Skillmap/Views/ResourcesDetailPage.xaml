<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Skillmap.ViewModels"
             x:Class="Skillmap.Views.ResourcesDetailPage"
             Title="Detalle del recurso"
             BackgroundColor="#ECECEC"
             Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:ResourcesDetailViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">

        <!-- Título del recurso -->
        <Label Text="{Binding Titulo}"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <!-- Descripción del recurso -->
        <Label Text="{Binding Descripcion}"
               FontSize="16"
               TextColor="Black"
               Margin="10,10,10,0" />

        <!-- Fecha de subida -->
        <Label Text="{Binding FechaSubida}"
               FontSize="14"
               TextColor="Gray"
               Margin="10,5,10,0" />

        <!-- Botón para abrir el enlace -->
        <Button Text="🌐 Ver Recurso"
                Command="{Binding AbrirLinkCommand}"
                BackgroundColor="#e91d1d"
                TextColor="White"
                HeightRequest="45"
                CornerRadius="20"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>