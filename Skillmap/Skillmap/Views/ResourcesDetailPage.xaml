<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skillmap.Views.ResourcesDetailPage"
             Title="Detalle del recurso"
             BackgroundColor="#ECECEC"
             Shell.TabBarIsVisible="False">
    
    <VerticalStackLayout Padding="20">

        <!-- Título del recurso -->
        <Label x:Name="titleLabel"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <!-- Descripción del recurso -->
        <Label x:Name="descriptionLabel"
               FontSize="16"
               TextColor="Black"
               Margin="10,10,10,0" />

        <!-- Fecha de subida -->
        <Label x:Name="uploadDateLabel"
               FontSize="14"
               TextColor="Gray"
               Margin="10,5,10,0" />

        <!-- Botón para abrir el enlace -->
        <Button Text="🌐 Ver Recurso"
                BackgroundColor="#e91d1d"
                TextColor="White"
                HeightRequest="45"
                CornerRadius="20"
                Clicked="OnOpenLinkClicked"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>